<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="school.admin.modules.sys.dao.SysRoleDao">

    <select id="get" resultType="school.admin.modules.sys.entity.SysRoleEntity">
        SELECT a.* FROM `sys_role` a WHERE a.`role_id` = #{roleId}
    </select>

    <select id="queryList" resultType="school.admin.modules.sys.entity.SysRoleEntity">
        select a.* from sys_role a order by a.create_date desc
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="userId" parameterType="school.admin.modules.sys.entity.SysRoleEntity">
        insert into sys_role
        (
        `role_name`,
        `remark`,
        `create_date`
        )
        VALUES (
        #{roleName},
        #{remark},
        #{createDate}
        )
    </insert>

    <delete id="deleteBatchByIds">
        delete from sys_role
        where role_id IN
        <foreach collection="ids" item="item" index="index" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </delete>

</mapper>