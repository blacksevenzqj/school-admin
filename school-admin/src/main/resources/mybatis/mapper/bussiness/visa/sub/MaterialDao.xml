<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="school.management.business.visa.dao.mybatis.MaterialDao">

    <select id="queryList" resultType="school.management.business.visa.entity.Material">
        select a.* from qz_material a
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="title != null and title.length()>0"> AND a. title like CONCAT('%',#{title},'%') </if>
        </trim>
        ORDER BY create_time DESC
    </select>

    <select id="getById" resultType="school.management.business.visa.entity.Material">
        select * from qz_material where id = #{id}
    </select>

    <insert id="insert" parameterType="school.management.business.visa.entity.Material">
    insert into qz_material
    (
    `title`,
    `content`,
    `create_time`,
    `del_flag`
    )
    VALUES (
      #{title},
      #{content},
      #{createTime},
      #{delFlag}
    )
    </insert>

    <update id="update" parameterType="school.management.business.visa.entity.Material">
        UPDATE qz_material
        <trim prefix="set" suffixOverrides="," suffix=" where id = #{id} ">
            <if test="title != null and title.length()>0"> title = #{title} , </if>
            <if test="content != null and content.length()>0"> content = #{content} , </if>
            <if test="createTime != null" > create_time = #{createTime} , </if>
            <if test="delFlag != null" > del_flag = #{delFlag} , </if>
        </trim>
    </update>

    <delete id="deleteBatchByIds">
        delete from qz_material where id in
        <foreach collection="ids" item="item" index="index" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>



</mapper>