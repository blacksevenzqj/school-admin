<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="school.management.business.businesshelp.dao.BusinessHeadlinesDao">

    <select id="queryList" resultType="school.management.business.businesshelp.entity.BusinessHeadlines">
        select a.* from cy_business_headlines a
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="title != null and title.length()>0"> AND a. title = #{title}
            </if>
        </trim>
        ORDER BY create_time DESC
    </select>

    <select id="getById" resultType="school.management.business.businesshelp.entity.BusinessHeadlines">
        select a.* from cy_business_headlines a where a.id = #{id}
    </select>


    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="school.management.business.businesshelp.entity.BusinessHeadlines">
        insert into cy_business_headlines
        (
        `sys_user_id`,
        `title`,
        `headline_level`,
        `headline_text_url`,
        `create_time`
        )
        VALUES (
        #{sysUserId},
        #{title},
        #{headLineLevel},
        #{headLineTextUrl},
        #{createTime}
        )
    </insert>

    <update id="update" parameterType="school.management.business.businesshelp.entity.BusinessHeadlines">
        UPDATE cy_business_headlines
        <trim prefix="set" suffixOverrides="," suffix=" where id = #{id} ">
            <if test="sysUserId != null"> sys_user_id = #{sysUserId} , </if>
            <if test="title != null and title.length()>0"> title = #{title} , </if>
            <if test="headLineLevel != null"> headline_level = #{headLineLevel} , </if>
            <if test="headLineTextUrl != null and headLineTextUrl.length()>0"> headline_text_url = #{headLineTextUrl} , </if>
            <if test="createTime != null"> create_time = #{createTime} , </if>
        </trim>
    </update>

    <delete id="deleteById">
        DELETE from cy_business_headlines where id = #{id}
    </delete>


</mapper>